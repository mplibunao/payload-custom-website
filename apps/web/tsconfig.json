{
	"extends": "tsconfig/remix-cjs.json",
	"compilerOptions": {
		"importHelpers": true,
		"baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
		  "payload/generated-types": ["./src/cms/payload-types.ts"]
    }
	},
	"include": [
		"src",
		"**/*.ts",
		"**/*.tsx",
		"scripts/**.ts",
    "**/*.d.ts"
	],
	"exclude": ["node_modules"]
}
