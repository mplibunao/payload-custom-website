{
	"extends": "tsconfig/remix-cjs.json",
	"compilerOptions": {
		"importHelpers": true,
		"baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
		"module": "ESNext",
		"moduleResolution": "Bundler"
	},
	"include": [
		"src",
		"**/*.ts",
		"**/*.tsx",
		"scripts/**.ts",
    "**/*.d.ts",
		"src/infra/payload/config.ts"
	],
	"exclude": ["node_modules"]
}
